<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Promo"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textRestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="Resto Name"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textDistRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="Jarak"
                android:textSize="16sp"
                app:drawableTint="#F44336"
                app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
                app:layout_constraintTop_toBottomOf="@+id/textRestName" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="."
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textDistRestaurant"
                app:layout_constraintTop_toTopOf="@+id/textDistRestaurant" />

            <TextView
                android:id="@+id/textRateRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="Rate"
                android:textSize="16sp"
                app:drawableTint="#F44336"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20" />

            <TextView
                android:id="@+id/textTypeRestoPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="asian"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textDistRestaurant"
                app:layout_constraintTop_toBottomOf="@+id/textDistRestaurant" />

            <ProgressBar
                android:id="@+id/progressLoadImagePromo"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/imageRestaurant"
                app:layout_constraintEnd_toEndOf="@+id/imageRestaurant"
                app:layout_constraintStart_toStartOf="@+id/imageRestaurant"
                app:layout_constraintTop_toTopOf="@+id/imageRestaurant" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>