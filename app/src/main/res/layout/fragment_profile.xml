<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment" >

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="Lala"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageProf"
        app:layout_constraintStart_toStartOf="@+id/imageProf"
        app:layout_constraintTop_toBottomOf="@+id/imageProf" />

    <TextView
        android:id="@+id/textFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="16"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUsername" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="16"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textFollowers"
        app:layout_constraintTop_toTopOf="@+id/textFollowers" />

    <TextView
        android:id="@+id/textReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="16"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textFollowing"
        app:layout_constraintTop_toTopOf="@+id/textFollowing" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProf"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Followers"
        app:layout_constraintEnd_toEndOf="@+id/textFollowers"
        app:layout_constraintStart_toStartOf="@+id/textFollowers"
        app:layout_constraintTop_toBottomOf="@+id/textFollowers" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Following"
        app:layout_constraintEnd_toEndOf="@+id/textFollowing"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/textFollowing"
        app:layout_constraintTop_toBottomOf="@+id/textFollowing" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Review"
        app:layout_constraintEnd_toEndOf="@+id/textReview"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/textReview"
        app:layout_constraintTop_toBottomOf="@+id/textReview" />

    <ProgressBar
        android:id="@+id/progressLoadProfile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textUsername"
        app:layout_constraintEnd_toEndOf="@+id/imageProf"
        app:layout_constraintStart_toStartOf="@+id/imageProf"
        app:layout_constraintTop_toTopOf="@+id/imageProf" />
</androidx.constraintlayout.widget.ConstraintLayout>