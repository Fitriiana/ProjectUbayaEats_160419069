<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    tools:context="Lala">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageSave"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textRestoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/frank_ruhl_libre_bold"
                android:text="Resto Namne"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageSave"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tipe resto"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textRestoName"
                app:layout_constraintTop_toBottomOf="@+id/textRestoName" />

            <TextView
                android:id="@+id/textRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Rating"
                android:textSize="14sp"
                app:drawableTint="#F44336"
                app:layout_constraintStart_toEndOf="@+id/textTipe"
                app:layout_constraintTop_toTopOf="@+id/textTipe" />

            <TextView
                android:id="@+id/textDist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jarak"
                android:textSize="14sp"
                app:drawableTint="#F44336"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textRate"
                app:layout_constraintTop_toTopOf="@+id/textRate" />

            <ProgressBar
                android:id="@+id/progressBarSave"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageSave"
                app:layout_constraintStart_toStartOf="@+id/imageSave"
                app:layout_constraintTop_toTopOf="@+id/imageSave" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>